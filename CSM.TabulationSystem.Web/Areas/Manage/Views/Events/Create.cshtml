@model CSM.TabulationSystem.Web.Areas.Manage.ViewModels.Events.CreateViewModel
@{
    ViewData["Title"] = "Create Event";
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}

<div class="card-header"><a href="~/manage/events"><span class="fa fa-arrow-left"></span> back</a></div>
<div class="card-body">
    <div class="card-title">
        <h3 class="text-center title-2">Create a new Event</h3>
    </div>
    <hr>
    <form action="~/manage/events/create" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            <label for="title" class="control-label mb-1">Title</label>
            <input type="text" class="form-control" id="title" name="Title" aria-describedby="titleHelp" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="lastName" class="control-label mb-1">Description</label>
            <textarea for="description" name="Description" rows="4" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="~/manage/events" class="btn btn-danger">Cancel</a>
    </form>
</div>